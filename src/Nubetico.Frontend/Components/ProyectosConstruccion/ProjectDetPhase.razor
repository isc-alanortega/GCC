@inherits NbBaseComponent

<div>
    <RadzenCard>
        @* <RadzenRow>
        <RadzenColumn Size="6">
        <RadzenFormField Text="@LocalizerServices!["Shared.Textos.Folio"]" Style="width: 100%;">
        <RadzenTextBox Trim="true"
        Value="@(PhaseData!.Folio)"
