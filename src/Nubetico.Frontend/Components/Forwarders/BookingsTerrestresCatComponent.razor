        <RadzenDataGridColumn Property="Destino" Title="@localizer["Forwarders.Destination"]" />
        <RadzenDataGridColumn Property="Modalidad" Title="@localizer["Forwarders.Mode"]" />
        <RadzenDataGridColumn Property="Cliente" Title="@localizer["Forwarders.Client"]" />
        <RadzenDataGridColumn Property="Precio" Title="@localizer["Forwarders.Price"]" />
        <RadzenDataGridColumn Property="Credito" Title="@localizer["Forwarders.Credit"]" />
    </Columns>
</RadzenDataGrid>